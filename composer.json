{
    "name": "alldigitalrewards/xtrm",
    "description": "Xtrm Fulfillment SDK",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "jmuto",
            "email": "jmuto@alldigitalrewards.com"
        }
    ],
    "require": {
        "php" : "^7.4|^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "psr/container": "^1.0",
        "ext-json": "*",
        "respect/validation": "^2.1",
        "league/iso3166": "^4.3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "AllDigitalRewards\\Xtrm\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AllDigitalRewards\\Xtrm\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=phpcs.xml --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "fix-style": "phpcbf -p --standard=phpcs.xml --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src"
    }
}
